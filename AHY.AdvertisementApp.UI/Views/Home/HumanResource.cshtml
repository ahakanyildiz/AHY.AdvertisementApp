@model List<AdvertisementListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dummy mt-5"></div>

<div class="container my-3" style="min-height:730px">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @for (int i = 0; i < Model?.Count; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@Model[i].Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Model[i].Id" aria-expanded="@(i==0)" aria-controls="collapse-@Model[i].Id">
                        @Model[i].Title
                    </button>
                </h2>
                <div id="collapse-@Model[i].Id" class="accordion-collapse collapse @(i==0?"show":"")" aria-labelledby="heading-@Model[i].Id" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                        @Html.Raw(Model[i].Description)

                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Send" asp-controller="Advertisement" asp-route-advertisementId="@Model[i].Id">Başvur</a>
                            }
                            else
                            {
                                <div class="alert alert-warning text-center ">
                                    Başvuru yapabilmeniz için kayıt olmanız gerekmektedir. <a asp-action="SignUp" asp-controller="Account">Kayıt Ol</a>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
